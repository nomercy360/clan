---
const { title, text, enableBorder = true } = Astro.props;
---

<div class="flex flex-col items-center gap-4 sm:flex-row sm:gap-2.5">
  <div class="flex flex-col items-center px-4 text-center">
    <p class="text-base sm:text-lg">{title}</p>
    <p class="text-sm">
      {text}
    </p>
  </div>
  {
    enableBorder && (
      <div class="h-[1px] w-1/4 bg-neutral-200 sm:h-3/4 sm:w-0.5" />
    )
  }
</div>
